<div class="page-header">
  <h1>Contact</h1>
</div>

<div class = "row">
	<div class = "col-md-6 col-md-offset-3">
		<%= form_for(@contact) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %><br>

			<%= f.label :message %>
			<%= f.text_area :message, class: "contact_message_box" %>

			<%= f.submit :submit, class: "btn btn-primary" %>
		<% end %>
	</div>
</div>